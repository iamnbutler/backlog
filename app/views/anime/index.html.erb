<!-- start modules -->
  <div class="current-season home-module">
    <h3 class="module-title">Anime</h3>
    <div class="module-inner scrollable">
      <ul class="airing-soon-anime">
        <% @anime.each do |anime| %>
          <li>
            <div class="icon"></div>
            <%= link_to anime.name, anime, :class => "name" %>
            <div class="air-time"><%= anime.series.name %></div>
          </li>
        <% end %>
      </ul>
    </div>
    <h3 class="module-title">Series</h3>
    
  </div>

<% if false %>
<h1>Listing anime</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @anime.each do |anime| %>
      <tr>
        <td><%= anime.name %></td>
        <td><%= anime.year %></td>
        <td><%= anime.description %></td>
        <td><%= link_to 'Show', anime %></td>
        <td><%= link_to 'Edit', edit_anime_path(anime) %></td>
        <td><%= link_to 'Destroy', anime, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Anime', new_anime_path %>

<% end %>
